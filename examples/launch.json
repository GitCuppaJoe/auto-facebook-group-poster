    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Remote Attach With Tasks",
            "type": "python",
            "request": "attach",
            "preLaunchTask": "docker-run",
            "postDebugTask": "cleanup",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/fb_poster/",
                    "remoteRoot": "."
                }
            ]
        },
        {
            "name": "Python: Remote Attach",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "."
                }
            ]
        }
    ]
}